include ../_mixin/macrosMixin


-
    var servicesArr = [
        "PRODUCTION:",
        "COMPLEX ONLINE MARKETING:",
        "DATA CONSULTING"
    ];
    var servicesArr0 = [
        "Web sites",
        "Chat bots",
        "Marketing automation systems"
    ];
    var servicesArr1 = [
        "Programmatic ads",
        "SEO",
        "PPC",
        "E-mail marketing",
        "UX analytics"
    ];
    var servicesArr2 = [
        "Data strategy",
        "DMP integration",
        "Big data solutions",
        "Eye-tracking researches"
    ];

mixin list(textArr)
    -for(var j = 0; j < textArr.length; j++)
        p.services__text!= textArr[j]


section.services#services

    .container

        +mainTitle("services__title", "Our services")

        .services__row
            -for(var i = 0; i < servicesArr.length; i++)
                div(class="services__block services__block-" + i)
                    .services__img-wrap
                        img(
                            src="./image/img-services-" + i + ".png"
                            title=""
                            alt=""
                            class="services__img img_responsive"
                        )

                    p.services__tilte
                        span.services__tilte-text!= servicesArr[i]
                        i.services__tilte-icon

                    .services__row-list
                        if(i === 0)
                            +list(servicesArr0)
                        else if(i === 1)
                            +list(servicesArr1)
                        else if(i === 2)
                            +list(servicesArr2)

    img(
        src="./image/img-coordinate-axis.png"
        title=""
        alt=""
        class="services__Ñoordinate-axis img_responsive"
    )